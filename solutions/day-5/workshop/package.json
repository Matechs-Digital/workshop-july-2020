{
  "name": "workshop",
  "private": true,
  "scripts": {
    "clean": "rimraf ./node_modules && rimraf ./packages/*/node_modules",
    "clean:npm": "rimraf ./package-lock.json && rimraf ./packages/*/package-lock.json",
    "clean:yarn": "rimraf ./yarn.lock && rimraf ./packages/*/yarn.lock",
    "clean:coverage": "rimraf ./coverage && rimraf ./packages/*/coverage",
    "clean:esm": "rimraf ./packages/*/esm",
    "clean:ultra": "rimraf ./packages/*/.ultra.cache.json",
    "clean:light": "yarn clean:coverage && yarn clean:esm && yarn clean:ultra",
    "clean:nyc": "rimraf ./.nyc_output && rimraf ./packages/*/.nyc_output",
    "clean:all": "yarn clean:light && yarn clean:npm && yarn clean:yarn && yarn clean:nyc",
    "bootstrap": "lerna bootstrap",
    "start:app": "lerna run --scope @workshop/app start",
    "build": "ultra -r --build build",
    "test": "ultra -r test",
    "e2e:run": "lerna run e2e:run",
    "test:coverage": "ultra -r test --coverage",
    "test:summary": "./scripts/summary.sh",
    "test:all": "yarn test:coverage && yarn e2e:run && yarn test:summary"
  },
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-regenerator": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@cypress/code-coverage": "^3.8.1",
    "@testing-library/dom": "^7.20.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.5",
    "@testing-library/react-hooks": "^3.3.0",
    "@testing-library/user-event": "^12.0.11",
    "@types/jest": "^26.0.4",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "cypress": "^4.10.0",
    "cypress-react-unit-test": "^4.9.0",
    "fast-check": "^1.26.0",
    "jest": "^26.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6",
    "ultra-runner": "^3.5.0",
    "webpack": "^4.43.0"
  }
}
